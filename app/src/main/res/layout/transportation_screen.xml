<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:id="@+id/runningTotal_label"
    android:touchscreenBlocksFocus="true"
    android:background="@drawable/main_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Madrid, Spain"
        android:id="@+id/destination"
        android:gravity="center"
        android:textSize="24dp"
        android:typeface="serif"
        android:layout_alignTop="@+id/source"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="147dp"
        android:textColor="#FF000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Reno, NV"
        android:id="@+id/source"
        android:gravity="center"
        android:textSize="24dp"
        android:typeface="serif"
        android:textColor="#FF000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="May 16, 2016 - June 1, 2016"
        android:id="@+id/textView"
        android:layout_below="@+id/destination"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How are you going to get there?"
        android:id="@+id/destinationTransport"
        android:textSize="18dp"
        android:textColor="#FF000000"
        android:textStyle="bold"
        android:paddingTop="25dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/destinationTransport"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:paddingTop="15dp"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="@string/Cost"
        android:id="@+id/runningCost"
        android:textColor="#ffffff"
        android:textIsSelectable="false"
        android:textSize="35dp"
        android:background="#617A76"
        android:singleLine="false"
        android:height="69dp"
        android:gravity="center"
        android:layout_marginBottom="66dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:text="@string/Next"
        android:id="@+id/button"
        android:background="#c78c54"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/runningCost"
        android:layout_alignRight="@+id/spinner"
        android:layout_alignEnd="@+id/spinner"
        android:textSize="30dp"
        android:textAllCaps="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Transportation Text"
        android:id="@+id/transportationCost"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Running Total"
        android:id="@+id/runningTotal_label"
        android:layout_above="@+id/runningCost"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp" />

</RelativeLayout>
